<div class="card">
  <div class="card-header">
    <%= @post.title %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @post.content %></p>
      <footer class="blockquote-footer">
      	<form action="/post/create_reply/<%= @post.id %>">
      		<input type="text" name="content">
      		<input type="submit" value="reply">
		</form>      
      </footer>
    </blockquote>
  </div>
</div>
<a href="/">go to home</a>

<% @post.replies.each do |reply| %>
	<div class="card">
	  <div class="card-body">
	    <%= reply.content %>
	  </div>
	</div>
<% end %>
